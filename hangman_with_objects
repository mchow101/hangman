import java.util.Scanner;

public class HmObj {

	private int length;
	private char[] guess;
	private boolean gameOver;
	private int count;
	private String game;

	public HmObj(String word) {
		this.length = word.length();
		game = word.toUpperCase();
		this.guess = new char[this.length];
		System.out.println(this.length);
		for(int i = 0; i < this.length; i++) {
			this.guess[i] = '-';
			System.out.print(this.guess[i] + " ");
		}
		this.gameOver = false;
	}
	
	public  void chck(String a) {
		for(int i = 0; i < this.length; i++) {
			a = a.toUpperCase();
			if(this.game.charAt(i) == a.charAt(0) && this.guess[i] == '-') {
				this.guess[i] = a.charAt(0);
				this.count++;
			}
		}
	}

	public static void main(String[] args) {
		HmObj word1 = new HmObj("Pterodoctyl");
		@SuppressWarnings("resource")
		Scanner scan = new Scanner(System.in);
		while(word1.count < word1.length) {
			word1.chck(scan.next());
			System.out.println(word1.guess);
		}
	}
}
